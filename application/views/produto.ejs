<!DOCTYPE html>
<html>
	<head>
		
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
		<link rel="stylesheet" type="text/css" href="/css/style.css">

		<title>Loja Vip</title>

		<% 
			var nome 
			
			if(nome == undefined){
				nome = ''
			} else {
				nome = nome.split(' ')[0]
			}
		%>

		<script type="text/javascript">
			var nome = '<%=nome%>'
			var id = '<%=produto[0]._id%>'
			var favorito = <%=favorito%>
			var adicionado = <%=adicionado%>

			function enviar_avaliacao(){
				var avaliacao = $('textarea').val()
				if(avaliacao != ''){
					$.ajax({
					  url: `/produto/enviar_avaliacao/${avaliacao}/${id}`,
					  type: 'put',
					  success: data => {
					  	$('#area_feedback').html(`
					  		<p class="text-success text-center">Avaliação enviada com sucesso</p>
					  	`)
					  	$('textarea').val('')
					  	setTimeout(() => {
					  		$('#area_feedback').hide()
					  	}, 2000)
					  }
					})
				}
			}

			$(() => {
				
				if(favorito){
					$('#favorito').html('<i class="fas fa-star text-warning mouse"></i>')
				}

				if(adicionado){
					$('#carrinho').html('<i class="fas fa-shopping-cart text-success mouse"></i>') 
				}

				$('#favorito').click(() => {

					if(nome != ''){
						$.ajax({
							url: `/produto/favoritar/${id}`,
							type: 'put',
							success: data => {
								if(data == 'favoritar'){
									$('#favorito').html('<i class="fas fa-star text-warning mouse"></i>')
								} else {
									$('#favorito').html('<i class="far fa-star text-warning mouse"></i>')
								}
							}
						})
					} else {
						$('#body').html('Você deve fazer o Login para favoritar este produto!')
						$('#modal').show()
					}

				})

				$('#carrinho').click(() => {

					if(nome != ''){
						$.ajax({
							url: `/produto/carrinho/${id}`,
							type: 'put',
							success: data => {
								if(data == 'adicionar'){
									$('#carrinho').html('<i class="fas fa-shopping-cart text-success mouse"></i>')
								} else {
									$('#carrinho').html('<i class="fas fa-shopping-cart cor_carrinho mouse"></i>')
								}
							}
						})
					} else {
						$('#body').html('Você deve fazer o Login para adicionar este produto ao carrinho!')
						$('#modal').show()
					}

				})

				$('#entendi').click(() => {
					$('#modal').hide()
				})

				$('#close').click(() => {
					$('#modal').hide()
				})

				$('#login').click(() => {
					window.location.href = '/login'
				})


				$('#deixar_avaliacao').click(() => {
					if(nome != ''){
						$('#deixar_avaliacao').addClass('active')
						$('#avaliacoes').removeClass('active')

						$('#area_avaliacoes').html(`
							<textarea class="form-control" placeholder="Deixe um comentário sobre este produto aqui"></textarea>
							<button onclick="enviar_avaliacao()" class="btn btn-primary col-12 mt-2">Enviar</button>
						`)
					} else {
						$('#body').html('Você deve fazer o Login para realizar uma avaliação!')
						$('#modal').show()
					}
				})

				$('#avaliacoes').click(() => {
					$('#area_avaliacoes').html('')
					$('#deixar_avaliacao').removeClass('active')
					$('#avaliacoes').addClass('active')
						$.ajax({
							url: '/produto/avaliacoes/'+id,
							type: 'get',
							success: data => {
								
								if(data[0] != undefined){

								$('#area_avaliacoes').html(`
									<ul class="list-group" id="lista_avaliacoes">
									</ul>
								`)
								data.forEach(avaliacao => {
									$('#lista_avaliacoes').append(`
										<li class="list-group-item">
											<h6>
												<i class="far fa-user  text-info"></i>
												${avaliacao.nome_usuario}
											</h6>
											<p>${avaliacao.avaliacao}</p>
											<div class="data">Em ${avaliacao.data[0]} às ${avaliacao.data[1]}</div>
										</li>
									`)
								})
							}
						}
					})					
				})
			})
		
		</script>

	</head>

	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-yellow">
		  <a class="navbar-brand" href="/">
		  	<h4 class="logo">Loja Vip</h4>
		  </a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>
		  <div class="collapse navbar-collapse" id="navbarNavDropdown">
		    <ul class="navbar-nav ml-auto margem_navbar">
		      <li class="nav-item">
		        <a class="nav-link" href="/produtos">
		          <h6>Produtos</h5>
		        </a>
		      </li>
		      <li class="nav-item">
		        <a class="nav-link" href="/categorias">
		          <h6>Categorias</h6>
		    	</a>
		      </li>
		      <li class="nav-item dropdown">
		        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		          <h6 class="inline">
		          	<%=nome%>
		          	<i class="far fa-user text-info"></i>
		          </h6>
		        </a>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
		          <a class="dropdown-item" href="/login">Login/Cadastro</a>
		          <a class="dropdown-item" href="/favoritos">Favoritos</a>
		          <a class="dropdown-item" href="/pedidos">Pedidos</a>
		          <div class="dropdown-divider"></div>
		          <a class="dropdown-item" href="/sair">Sair</a>
		        </div>
		      </li>  
		      <li class="nav-item">  
		      	<a href="/carrinho" class="nav-link">
			      	<h5 class="inline">
			          	<i class="fas fa-shopping-cart text-info mouse"></i>
			      	</h5>
			      </a>
		       </li>
		    </ul>	
		</nav>

		<div class="row m-2 m-lg-5">
			<img src="/imagens_produtos/<%=produto[0].imagem%>" class="img-fluid col-12 col-lg-6">
			<div class="col-12 col-lg-6">
				<h4>
					<%=produto[0].titulo%>		
				</h4>

				<p class="texto_descricao">
					<%=produto[0].descricao%>
				</p>

				<h4>
					R$ <%=produto[0].valor%>,00		
				</h4>

				<p class="texto_descricao">
					Disponíveis em estoque: <%=produto[0].quantidade%>
				</p>

				<div class="d-flex justify-content-around align-items-center">
					<h3 id="favorito">	
						<i class="far fa-star text-warning mouse"></i>
					</h3>
					<h3 id="carrinho">
						<i class="fas fa-shopping-cart cor_carrinho mouse"></i>
					</h3>
					
					<button class="btn btn-lg btn-outline-info">
						Comprar
					</button>
				</div>

			</div>
		</div>

		<div class="container mt-3 mt-md-0">
			<ul class="nav nav-tabs">
				<li class="nav-item">
			    	<a class="nav-link mouse" id="avaliacoes">
			    		<h6>Ver Avaliações</h6>
			    	</a>
			  	</li>
			  	<li class="nav-item">
			    	<a class="nav-link mouse" id="deixar_avaliacao">
			    		<h6>Deixar uma Avaliação</h6>
			    	</a>
			  	</li>
			</ul>
			
			<div id="area_feedback">

			</div>

			<div id="area_avaliacoes" class="mt-4">
					
			</div>

		</div>

		<div id="modal" class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 id="titulo" class="modal-title" id="exampleModalLabel">
		        	Ops!
		        </h5>
		        <button id="close" type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body" id="body">		        	
		      </div>
		      <div class="modal-footer">
		        <button id="entendi" type="button" class="btn btn-info">Entendi</button>	
		        <button id="login" type="button" class="btn btn-info">Ir para Login</button>       
		      </div>
		    </div>
		  </div>
		</div>
		

		<footer>
			<div class="d-flex justify-content-center">
				<div>
					Copyright © 2020 Todos os direitos reservados
				</div>
			</div>
		</footer>

	</body>
</html>